// -*- coding:utf-8 -*-

{    
    "manifest_version": 2,
    "name": "AfterSearchWE",
    "version": "2.0.0",
    
    "description": "A better way for \"Search on page\". This project is aimed at replacing SearchWP.",
    
    "icons": {
        "48": "icons/aftersearchwe_icon_default_48.png",
        "96": "icons/aftersearchwe_icon_default_96.png"
    },
    
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "find",
        "<all_urls>"
    ],
    
    "browser_action": {
        "default_icon": {
            "48": "icons/aftersearchwe_icon_default_48.png",
            "96": "icons/aftersearchwe_icon_default_96.png"
        },
        "default_title": "Mode: Mouseover"
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentscripts/script.js"],
            "css" : ["contentscripts/style.css"]
        }
    ],

    "background" : {
        "scripts": ["background.js"]
    }
}
